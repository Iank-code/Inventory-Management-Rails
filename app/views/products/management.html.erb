
<div id="products">
    <% belowLimitProducts.each do | product | %>
    <div  class="flex w-[60px] object-cover h-[60px]">
        <%= render product.image.blob %>
        </div>

        <div class="flex flex-col gap-3 items-start">
        <h1 class="font-bold">
            <%= product.name %>
        </h1>

        <h1 class="font-bold text-red-500">
            <%= product.quantity %> units
        </h1>

        <%= button_to "Delete", product, method: :delete, class: 'bg-red-500 text-white py-1 px-2 rounded-md' %>
        </div>

    <% end %>
</div>