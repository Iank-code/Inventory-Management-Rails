<p style="color: green"><%= notice %></p>

<div id="products">
  <% @products.each do |product| %>

    <a href="#"  class="shadow-lg rounded">
      <div  class="flex w-[250px] object-cover h-[250px]">
        <%= render product.image.blob %>
      </div>

      <div class="flex flex-col gap-8">
        <h1 class="font-bold">
          <%= product.name %>
        </h1>

        <h1 class="font-bold ml-5">
          <%= product.quantity %> units
        </h1>
      </div>
    </a>
  <% end %>
</div>
