<p style="color: green"><%= notice %></p>

<div id="products">
  <% @products.each do |product| %>

      <div  class="flex w-[100px] object-cover h-[100px]">
        <%= render product.image.blob %>
      </div>

      <div class="flex flex-col gap-3 items-start">
        <h1 class="font-bold">
          <%= product.name %>
        </h1>

        <h1 class="font-bold ml-5">
        <%  if product.quantity <= 10 %>
          <h1 class="text-red-500">
            <%= product.quantity %> units
          </h1>
        <% end %>

        <%  if product.quantity > 10 %>
          <%= product.quantity %> units
        <% end %>
        </h1>

        <%= button_to "Delete", product, method: :delete, class: 'bg-red-500 text-white py-1 px-2 rounded-md' %>
      </div>
  <% end %>
</div>
